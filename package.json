{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:t": "turbo run dev --parallel  --filter=nuxt3",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "start": "turbo run start --parallel",
    "start:apps": "turbo run start --parallel --filter='./apps/*'"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "eslint-config-custom": "link:packages/eslint-config-custom",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nuxt": "^3.4.1",
    "prettier": "^2.5.1",
    "turbo": "latest",
    "typescript": "^4.9.5"
  },
  "packageManager": "pnpm@7.15.0",
  "name": "test",
  "dependencies": {
    "vue": "^3.2.47"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx}": [
      "eslint --fix --ext *.{js,jsx,ts,tsx,json,md,mdx} ./",
      "eslint",
      "git add"
    ]
  }
}
